@model BTL_LTW.Models.Member
@{
    ViewData["Title"] = "Sửa quyền cho " + Model.FullName;
    var currentPermissionId = Model.MemberPermisions.FirstOrDefault()?.PermisionId ?? 0;
}

<h2>@ViewData["Title"]</h2>

<form asp-action="EditUserRole" method="post">
    <input type="hidden" name="memberId" value="@Model.MembersId" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    
    <div class="form-group">
        <label for="permissionId" class="control-label">Chọn quyền mới</label>
        <select name="permissionId" class="form-control">
            @foreach (var perm in (IEnumerable<BTL_LTW.Models.Permision>)ViewBag.Permissions)
            {
                if (perm.PermisionId == currentPermissionId)
                {
                    <option value="@perm.PermisionId" selected>@perm.PermisionName</option>
                }
                else
                {
                    <option value="@perm.PermisionId">@perm.PermisionName</option>
                }
            }
        </select>
    </div>
    
    <div class="form-group" style="margin-top: 15px;">
        <input type="submit" value="Lưu thay đổi" class="btn btn-primary" />
        <a asp-action="ManageUsers" class="btn btn-secondary">Quay lại</a>
    </div>
</form>
