@model IEnumerable<BTL_LTW.Models.Member>
@{
    ViewData["Title"] = "Quản lý người dùng";
}

<h2>Quản lý người dùng</h2>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Họ và tên</th>
            <th>Email</th>
            <th>Số điện thoại</th>
            <th>Quyền hiện tại</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            var currentPermission = user.MemberPermisions.FirstOrDefault()?.Permision?.PermisionName ?? "Chưa có quyền";
            <tr>
                <td>@user.FullName</td>
                <td>@user.Emai</td>
                <td>@user.PhoneNumber</td>
                <td>@currentPermission</td>
                <td>
                    <a asp-action="EditUserRole" asp-route-id="@user.MembersId" class="btn btn-sm btn-primary">Sửa quyền</a>
                </td>
            </tr>
        }
    </tbody>
</table>
