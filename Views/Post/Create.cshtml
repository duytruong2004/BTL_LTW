@model BTL_LTW.Models.Post

@{
    ViewData["Title"] = "Tạo bài viết";
}

<!-- Thêm Bootstrap nếu chưa có -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-header bg-primary text-white text-center">
            <h3 class="mb-0">Tạo bài viết mới</h3>
        </div>

        <div class="card-body p-4">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()

                <!-- Tiêu đề -->
                <div class="mb-3">
                    <label class="form-label fw-bold">Tiêu đề</label>
                    <input type="text" name="PostTitle" value="@Model?.PostTitle" class="form-control" placeholder="Nhập tiêu đề bài viết..." required />
                </div>

                <!-- Nội dung -->
                <div class="mb-3">
                    <label class="form-label fw-bold">Nội dung</label>
                    <textarea name="PostContent" rows="8" class="form-control" placeholder="Nhập nội dung bài viết..." required>@Model?.PostContent</textarea>
                </div>

                <!-- Thể loại -->
                <div class="mb-3">
                    <label class="form-label fw-bold">Thể loại</label>
                    <select name="CategoryId" asp-items="ViewBag.Categories" class="form-select">
                        <option value="">-- Chọn thể loại --</option>
                    </select>
                </div>

                <!-- Ảnh -->
                <div class="mb-3">
                    <label class="form-label fw-bold">Ảnh minh họa (tùy chọn)</label>
                    <input type="file" name="ImageFile" accept="image/*" class="form-control" />

                    <div class="mt-2">
                        <label class="form-label">Hoặc nhập URL ảnh</label>
                        <input type="text" name="PostThumbnailUrl" value="@Model?.PostThumbnailUrl" class="form-control" placeholder="https://example.com/your-image.jpg" />
                    </div>
                </div>

                <!-- Nút -->
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-success px-4 me-2">
                        <i class="bi bi-send-fill"></i> Gửi bài viết
                    </button>
                    <a asp-action="Index" class="btn btn-secondary px-4">Hủy</a>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Bootstrap Icons (nếu muốn icon) -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
